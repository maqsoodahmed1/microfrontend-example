{
  "name": "react-microfrontends-workspace",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run build:remotes && concurrently \"npm run serve:remotes\" \"npm run dev:parent\"",
    "dev:parent": "cd apps/parent && npm run dev",
    "build:remotes": "npm run build:dashboard && npm run build:settings",
    "serve:remotes": "concurrently \"npm run serve:dashboard\" \"npm run serve:settings\"",
    "build:dashboard": "cd apps/dashboard && npm run build",
    "build:settings": "cd apps/settings && npm run build",
    "serve:dashboard": "cd apps/dashboard && npm run preview",
    "serve:settings": "cd apps/settings && npm run preview",
    "build": "npm run build:remotes && cd apps/parent && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}